<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".Search">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_generos"
            android:layout_width="271dp"
            android:layout_height="41dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/gotham_bold"
            android:text="Explore seus gêneros"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView5" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="384dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/gotham_bold"
                android:text="O que você quer ouvir?"
                android:textColor="#535353"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_search_24" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_buscar"
            android:layout_width="94dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="43dp"
            android:fontFamily="@font/gotham_bold"
            android:text="Buscar"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/cardView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="41dp"
            android:layout_marginStart="236dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/baseline_photo_camera_24"
            app:layout_constraintBottom_toTopOf="@+id/cardView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_buscar"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/Genero1"
            android:layout_width="129dp"
            android:layout_height="245dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_generos">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="129dp"
                android:layout_height="245dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kendrick" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Genero2"
            android:layout_width="129dp"
            android:layout_height="245dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintStart_toEndOf="@+id/Genero1"
            app:layout_constraintTop_toBottomOf="@+id/txt_generos">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/sabrina" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Genero3"
            android:layout_width="129dp"
            android:layout_height="245dp"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintStart_toEndOf="@+id/Genero2"
            app:layout_constraintTop_toBottomOf="@+id/txt_generos">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/kid_laroi" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_navegar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:fontFamily="@font/gotham_bold"
            android:text="Navegar por todas seções"
            android:textColor="#FFFFFF"
            android:textColorLink="#AE8080"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Genero1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/Seção1"
            android:layout_width="200dp"
            android:layout_height="141dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="18dp"
            app:cardBackgroundColor="#DA06BD"
            app:cardCornerRadius="4dp"
            app:layout_constraintBottom_toTopOf="@+id/Seção3"
            app:layout_constraintEnd_toStartOf="@+id/Seção2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_navegar"
            app:layout_constraintVertical_bias="0.666">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gotham_bold"
                android:text="Música"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Seção2"
            android:layout_width="200dp"
            android:layout_height="141dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="16dp"
            android:background="#315C21"
            app:cardBackgroundColor="#1D8055"
            app:cardCornerRadius="4dp"
            app:layout_constraintBottom_toTopOf="@+id/Seção4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_navegar"
            app:layout_constraintVertical_bias="0.612">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gotham_bold"
                android:text="Podcasts"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Seção3"
            android:layout_width="200dp"
            android:layout_height="141dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="19dp"
            app:cardBackgroundColor="#8A22D6"
            app:cardCornerRadius="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Seção1" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="138dp"
                android:layout_height="69dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gotham_bold"
                android:lineSpacingExtra="10sp"
                android:text="Eventos ao vivo"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Seção4"
            android:layout_width="200dp"
            android:layout_height="141dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="13dp"
            app:cardBackgroundColor="#233073"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.727"
            app:layout_constraintStart_toEndOf="@+id/Seção3"
            app:layout_constraintTop_toBottomOf="@+id/Seção2" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="132dp"
                android:layout_height="69dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/gotham_bold"
                android:lineSpacingExtra="8sp"
                android:text="Feito para você"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>